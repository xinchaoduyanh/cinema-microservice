{
  "name": "user-service",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "npx mikro-orm migration:create --config mikro-orm.config.ts",
    "migration:createBlank": "npx mikro-orm migration:create --blank",
    "migration:up": "npx mikro-orm migration:up",
    "migration:down": "npx mikro-orm migration:down",
    "migration:list": "npx mikro-orm migration:list",
    "migration:check": "npx mikro-orm migration:check",
    "migration:pending": "npx mikro-orm migration:pending",
    "migration:fresh": "npx mikro-orm migration:fresh",
    "gen:admin": "ts-node src/commands/create-admin.command.ts",
    "command:run": "node dist/cli.js"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.5.8",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.8",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2"
  },
  "dependencies": {
    "@app/common": "workspace:*",
    "@app/core": "workspace:*",
    "@mikro-orm/core": "^6.5.2",
    "@mikro-orm/migrations": "^6.5.2",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^10.4.20",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.1.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "add": "^2.0.6",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "csv-parser": "^3.2.0",
    "dayjs": "^1.11.13",
    "decimal.js": "^10.6.0",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.5.0",
    "express-request-id": "^3.0.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^9.15.1",
    "google-libphonenumber": "^3.2.42",
    "googleapis": "^152.0.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "nest-commander": "^3.17.0",
    "nest-winston": "^1.10.2",
    "nestjs-i18n": "^10.5.1",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.15.6",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "validatorjs": "^3.22.1",
    "winston": "^3.17.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
